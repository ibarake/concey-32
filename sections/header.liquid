<header>
  <div class="main-header">
    <div class="nav-icon nav-button">
      {% render 'nav-icon' %}
    </div>
    <div class="site-logo">
      {{ settings.logo | img_url | img_tag: 'logo', settings.logo.alt, '500x500' }}
    </div>
    <div class="nav-icon cart-drawer-toggle">
      <button class="cart-btn" href="/cart">{% render 'cart-icon' %}</button>
    </div>
  </div>
  <nav>
    <ul class="header-menu">
      {% for link in section.settings['main-menu'].links %}
        <li class="menu-item">
          <a href="{{ link.url }}" class="menu-item-link">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</header>
{% schema %}
{
  "name": "header",
  "settings": [
    {
      "type": "link_list",
      "id": "main-menu",
      "label": "Menu"
    }
  ]
}
{% endschema %}

