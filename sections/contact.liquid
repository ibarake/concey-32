<section class="contact">
  <div class="contact-section">
    <h2 class="contact-title">Contact Us</h2>
    <p class="contact-paragraph">
      Contact us if you have any special request or require support in the purchasing process.
    </p>
    <!-- Card 1 -->

    {% for block in section.blocks %}
      <div class="box">
        <div class="contact-card">
          <div class="card-icon">
            {% render 'phone-icon' %}
          </div>
          <h3 class="contant-box-title">{{ block.settings.card1_title }}</h3>
          <p class="card-description">{{ block.settings.card1_description }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
    "name": "contact",
    "settings": [
    {
        "type": "text",
        "label": "Contact Title",
        "id": "contact_title",
        "default": "Contact Us"
    },
    {
        "type": "textarea",
        "label": "Contact Description",
        "id": "contact_description",
        "default": "Have questions or need assistance? Feel free to reach out to us:"
    }
    ],
    "blocks": [{
      "type": "contact_card",
      "name": "contact card",
      "limit": 3,
      "settings": [
        {
            "type": "text",
            "label": "Card 1 Title",
            "id": "card1_title",
            "default": "Phone number"
        },
        {
            "type": "image_picker",
            "label": "Card 1 Icon",
            "id": "card1_icon"
        },
        {
            "type": "textarea",
            "label": "Card 1 Description",
            "id": "card1_description",
            "default": "Leverage agile frameworks to provide a robust synopsis."
        }
      ]
    }],
    "presets": [
    {
        "name": "Default",
        "category": "Custom"
    }
]
}
{% endschema %}

