<contact>
    <div class="contact-section">
        <h2 class="contact-title">Contact Us</h2>
        <p class="contact-description">Have questions or need assistance? Feel free to reach out to us:</p>

        <!-- Card 1 -->
        <div class="contact-card">
            <div class="card-icon">
                <img src="{{ section.settings.card1_icon | asset_url }}" alt="Card 1 Icon">
            </div>
            <h3 class="card-title">{{ section.settings.card1_title }}</h3>
            <p class="card-description">{{ section.settings.card1_description }}</p>
        </div>

        <!-- Card 2 -->
        <div class="contact-card">
            <div class="card-icon">
                <img src="{{ section.settings.card2_icon | asset_url }}" alt="Card 2 Icon">
            </div>
            <h3 class="card-title">{{ section.settings.card2_title }}</h3>
            <p class="card-description">{{ section.settings.card2_description }}</p>
        </div>

        <!-- Card 3 -->
        <div class="contact-card">
            <div class="card-icon">
                <img src="{{ section.settings.card3_icon | asset_url }}" alt="Card 3 Icon">
            </div>
            <h3 class="card-title">{{ section.settings.card3_title }}</h3>
            <p class="card-description">{{ section.settings.card3_description }}</p>
        </div>
    </div>

