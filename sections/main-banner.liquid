<section class="parallax">
  <div class="parallax-inner">
    <img src="{{ section.settings.parallax-image | image_url }}" class="img-parallax" loading="lazy">
  </div>
  <script>
    
  
  window.addEventListener('scroll', function() {
      const parallax = document.querySelector('.img-parallax');
      const scrolled = window.scrollY;
      parallax.style.transform = `translateY(${
        scrolled * 0.5
      }px)`;
    });


  </script>
</section>
{% schema %}
{
  "name": "Main banner home page",
  "settings": [
    {
      "type": "image_picker",
      "id": "parallax-image",
      "label": "parallax image"
    }
  ],
  "presets" : [{ "name" : "main banner" }]
}
{% endschema %}

